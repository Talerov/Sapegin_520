<Page x:Class="Sapegin_520.AddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sapegin_520"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPage">

    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="txtVenue" Margin="0 0 0 10"/>
            <DatePicker x:Name="dpDate" Margin="0 0 0 10"/>
            <TextBox x:Name="txtNumberOfVisitors" Margin="0 0 0 10"/>
            <ComboBox x:Name="cmbFormOfEvent" Margin="0 0 0 10" ItemsSource="{Binding FormOfEvents.FormOfEventName}"/>
            <Button Content="Добавить" Click="btnAdd_Click"/>
        </StackPanel>
    </Grid>
</Page>
