<Window x:Class="Sapegin_520.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sapegin_520"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="txtUsername" Margin="5" Width="200"/>
            <PasswordBox x:Name="txtPassword" Margin="5" Width="200"/>
            <Button Content="Войти" Click="btnLogin_Click" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
